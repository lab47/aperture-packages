formula = r"""
class Gexiv2 < Formula
  desc "GObject wrapper around the Exiv2 photo metadata library"
  homepage "https://wiki.gnome.org/Projects/gexiv2"
  url "https://download.gnome.org/sources/gexiv2/0.12/gexiv2-0.12.2.tar.xz"
  sha256 "2322b552aca330eef79724a699c51a302345d5e074738578b398b7f2ff97944c"
  license "GPL-2.0-or-later"

  bottle do
    sha256 cellar: :any, big_sur:  "281c26fef197eba6584e3250aeb131c0ab5daf8afbdc1d702de71ba1e664ccf3"
    sha256 cellar: :any, catalina: "b96f01c0d637c9b4e16bf0f4d3dc4d072d0d672396152893b5afcbc0ae60cd3a"
    sha256 cellar: :any, mojave:   "35e12c640ea61bd4659a86afb45e03efa8f81bfb46cb3a5119cb34f445f2dff2"
  end

  depends_on "gobject-introspection" => :build
  depends_on "meson" => :build
  depends_on "ninja" => :build
  depends_on "pkg-config" => :build
  depends_on "python@3.9" => :build
  depends_on "vala" => :build
  depends_on "exiv2"
  depends_on "glib"

  def install
    pyver = Language::Python.major_minor_version Formula["python@3.9"].opt_bin/"python3"

    mkdir "build" do
      system "meson", *std_meson_args, "-Dpython3_girdir=#{lib}/python#{pyver}/site-packages/gi/overrides", ".."
      system "ninja"
      system "ninja", "install"
    end
  end

  test do
    (testpath/"test.c").write <<~EOS
      #include <gexiv2/gexiv2.h>
      int main() {
        GExiv2Metadata *metadata = gexiv2_metadata_new();
        return 0;
      }
    EOS

    flags = [
      "-I#{HOMEBREW_PREFIX}/include/glib-2.0",
      "-I#{HOMEBREW_PREFIX}/lib/glib-2.0/include",
      "-L#{lib}",
      "-lgexiv2",
    ]

    system ENV.cc, "test.c", "-o", "test", *flags
    system "./test"
  end
end

"""

import "homebrew-install" as hi

import "apr" as i0, "apr-util" as i1, "autoconf" as i2, "automake" as i3, "bison" as i4, "cairo" as i5, "cmake" as i6, "exiv2" as i7, "fontconfig" as i8, "freetype" as i9, "fribidi" as i10, "gd" as i11, "gdbm" as i12, "gdk-pixbuf" as i13, "gettext" as i14, "glib" as i15, "gobject-introspection" as i16, "graphite2" as i17, "graphviz" as i18, "gts" as i19, "harfbuzz" as i20, "icu4c" as i21, "jasper" as i22, "jpeg" as i23, "libffi" as i24, "libpng" as i25, "libpthread-stubs" as i26, "librsvg" as i27, "libssh" as i28, "libssh2" as i29, "libtiff" as i30, "libtool" as i31, "libx11" as i32, "libxau" as i33, "libxcb" as i34, "libxdmcp" as i35, "libxext" as i36, "libxrender" as i37, "lz4" as i38, "lzo" as i39, "m4" as i40, "meson" as i41, "mpdecimal" as i42, "netpbm" as i43, "ninja" as i44, "openjdk" as i45, "openssl@1.1" as i46, "pango" as i47, "pcre" as i48, "pixman" as i49, "pkg-config" as i50, "python@3.9" as i51, "readline" as i52, "rust" as i53, "scons" as i54, "sphinx-doc" as i55, "sqlite" as i56, "subversion" as i57, "swig" as i58, "utf8proc" as i59, "util-macros" as i60, "vala" as i61, "webp" as i62, "xcb-proto" as i63, "xorgproto" as i64, "xtrans" as i65, "xz" as i66

pkg(
  name: "gexiv2",
  version: "0.12.2",
  dependencies: [hi, i0, i1, i2, i3, i4, i5, i6, i7, i8, i9, i10, i11, i12, i13, i14, i15, i16, i17, i18, i19, i20, i21, i22, i23, i24, i25, i26, i27, i28, i29, i30, i31, i32, i33, i34, i35, i36, i37, i38, i39, i40, i41, i42, i43, i44, i45, i46, i47, i48, i49, i50, i51, i52, i53, i54, i55, i56, i57, i58, i59, i60, i61, i62, i63, i64, i65, i66],

  def install(ctx) {
    ctx.write_file(join(ctx.build, "gexiv2.rb"), formula)
    ctx.system("homebrew-install", ctx.prefix, ctx.state_dir, "./gexiv2.rb")
  }
)
