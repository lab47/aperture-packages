formula = r"""
class Lasso < Formula
  desc "Library for Liberty Alliance and SAML protocols"
  homepage "https://lasso.entrouvert.org/"
  url "https://dev.entrouvert.org/releases/lasso/lasso-2.6.1.tar.gz"
  sha256 "f8a8dbce238802f6bb9c3b8bd528b4dce2a1dc44e2d34d8d839aa54fbc8ed1de"
  license "GPL-2.0"
  revision 1

  bottle do
    sha256 cellar: :any, arm64_big_sur: "aef8a4d9b81790ff84aad53da1c7d9a582ac69db8d775d930a30444174e186dc"
    sha256 cellar: :any, big_sur:       "83fa7671b9b8635dbf79c5db616d72c0f8d53ca543a508effd4bf628f46af26e"
    sha256 cellar: :any, catalina:      "bc1f4dc6fccff1c5631d37b4539d2d9a657357445488ce892756feccf98f660b"
    sha256 cellar: :any, mojave:        "d4bfe838fe8fd0b32ff7e19a4601c85a3b98a49ed8e1f05dc796ed5adf89005b"
    sha256 cellar: :any, high_sierra:   "8256178a39f08386db515226b334a93f895cb8d96c043acfe1a8d420efbb668f"
  end

  depends_on "pkg-config" => :build
  depends_on "python@3.9" => :build
  depends_on "glib"
  depends_on "libxmlsec1"
  depends_on "openssl@1.1"

  resource "six" do
    url "https://files.pythonhosted.org/packages/21/9f/b251f7f8a76dec1d6651be194dfba8fb8d7781d10ab3987190de8391d08e/six-1.14.0.tar.gz"
    sha256 "236bdbdce46e6e6a3d61a337c0f8b763ca1e8717c03b369e87a7ec7ce1319c0a"
  end

  def install
    xy = Language::Python.major_minor_version "python3"
    ENV.prepend_create_path "PYTHONPATH", libexec/"vendor/lib/python#{xy}/site-packages"
    resources.each do |r|
      r.stage do
        system "python3", *Language::Python.setup_install_args(libexec/"vendor")
      end
    end

    ENV.prepend_create_path "PYTHONPATH", libexec/"lib/python#{xy}/site-packages"
    system "./configure", "--disable-dependency-tracking",
                          "--disable-silent-rules",
                          "--disable-java",
                          "--disable-perl",
                          "--disable-php5",
                          "--disable-python",
                          "--prefix=#{prefix}",
                          "--with-pkg-config=#{ENV["PKG_CONFIG_PATH"]}"
    system "make", "install"
  end

  test do
    (testpath/"test.c").write <<~EOS
      #include <lasso/lasso.h>

      int main() {
        return lasso_init();
      }
    EOS
    system ENV.cc, "test.c",
                   "-I#{Formula["glib"].include}/glib-2.0",
                   "-I#{Formula["glib"].lib}/glib-2.0/include",
                   "-I#{MacOS.sdk_path}/usr/include/libxml2",
                   "-I#{Formula["libxmlsec1"].include}/xmlsec1",
                   "-L#{lib}", "-llasso", "-o", "test"
    system "./test"
  end
end

"""

import "homebrew-install" as hi

import "autoconf" as i0, "automake" as i1, "bdw-gc" as i2, "c-ares" as i3, "cmake" as i4, "gdbm" as i5, "gettext" as i6, "glib" as i7, "gmp" as i8, "gnu-sed" as i9, "gnutls" as i10, "guile" as i11, "jemalloc" as i12, "libatomic_ops" as i13, "libev" as i14, "libevent" as i15, "libffi" as i16, "libgcrypt" as i17, "libgpg-error" as i18, "libidn2" as i19, "libtasn1" as i20, "libtool" as i21, "libunistring" as i22, "libxml2" as i23, "libxmlsec1" as i24, "m4" as i25, "meson" as i26, "mpdecimal" as i27, "nettle" as i28, "nghttp2" as i29, "ninja" as i30, "openssl@1.1" as i31, "p11-kit" as i32, "pcre" as i33, "pkg-config" as i34, "python@3.9" as i35, "readline" as i36, "sphinx-doc" as i37, "sqlite" as i38, "unbound" as i39, "xz" as i40

pkg(
  name: "lasso",
  version: "2.6.1",
  dependencies: [hi, i0, i1, i2, i3, i4, i5, i6, i7, i8, i9, i10, i11, i12, i13, i14, i15, i16, i17, i18, i19, i20, i21, i22, i23, i24, i25, i26, i27, i28, i29, i30, i31, i32, i33, i34, i35, i36, i37, i38, i39, i40],

  def install(ctx) {
    ctx.write_file(join(ctx.build, "lasso.rb"), formula)
    ctx.system("homebrew-install", ctx.prefix, ctx.state_dir, "./lasso.rb")
  }
)
