formula = r"""
require "language/node"

class Bcoin < Formula
  desc "Javascript bitcoin library for node.js and browsers"
  homepage "https://bcoin.io"
  url "https://github.com/bcoin-org/bcoin/archive/v2.1.2.tar.gz"
  sha256 "b4c63598ee1efc17e4622ef88c1dff972692da1157e8daf7da5ea8abc3d234df"
  license "MIT"
  revision 4
  head "https://github.com/bcoin-org/bcoin.git"

  bottle do
    sha256                               arm64_big_sur: "03cd2231a1a9761a6e55696ac3285930b18193a390a4e327227e0ed71c4ad350"
    sha256                               big_sur:       "f5ea48d98b345f76dba628c6fca49f1202e214a8ed265109d898716b689198f4"
    sha256                               catalina:      "cbc374b70e39ec6954a58f1c69cfb357121df495da3e2e5b51d6ce590b35de92"
    sha256                               mojave:        "4e8b2f111b3643712058823c9af5c1650ce64c7d5757e30c1c58d3d34dcac8ec"
    sha256 cellar: :any_skip_relocation, x86_64_linux:  "9ea38b8e4d5304f539dce6485cc3ec5628c92642199bfafde0d49a2ae6e34f8b"
  end

  depends_on "python@3.9" => :build
  depends_on "node"

  def install
    system "#{Formula["node"].libexec}/bin/npm", "install", *Language::Node.std_npm_install_args(libexec)
    (bin/"bcoin").write_env_script libexec/"bin/bcoin", PATH: "#{Formula["node"].opt_bin}:$PATH"
  end

  test do
    (testpath/"script.js").write <<~EOS
      const assert = require('assert');
      const bcoin = require('#{libexec}/lib/node_modules/bcoin');
      assert(bcoin);

      const node = new bcoin.FullNode({
        prefix: '#{testpath}/.bcoin',
        memory: false
      });
      (async () => {
        await node.ensure();
      })();
    EOS
    system "#{Formula["node"].bin}/node", testpath/"script.js"
    assert File.directory?("#{testpath}/.bcoin")
  end
end

"""

import "homebrew-install" as hi

import "autoconf" as i0, "automake" as i1, "berkeley-db" as i2, "brotli" as i3, "bzip2" as i4, "c-ares" as i5, "cmake" as i6, "expat" as i7, "gdbm" as i8, "icu4c" as i9, "jemalloc" as i10, "libev" as i11, "libffi" as i12, "libtool" as i13, "libuv" as i14, "libxml2" as i15, "m4" as i16, "mpdecimal" as i17, "ncurses" as i18, "nghttp2" as i19, "ninja" as i20, "node" as i21, "openssl@1.1" as i22, "perl" as i23, "pkg-config" as i24, "python@3.9" as i25, "readline" as i26, "sphinx-doc" as i27, "sqlite" as i28, "unzip" as i29, "xz" as i30, "zip" as i31, "zlib" as i32

pkg(
  name: "bcoin",
  version: "2.1.2",
  dependencies: [hi, i0, i1, i2, i3, i4, i5, i6, i7, i8, i9, i10, i11, i12, i13, i14, i15, i16, i17, i18, i19, i20, i21, i22, i23, i24, i25, i26, i27, i28, i29, i30, i31, i32],

  def install(ctx) {
    ctx.write_file(join(ctx.build, "bcoin.rb"), formula)
    ctx.system("homebrew-install", ctx.prefix, ctx.state_dir, "./bcoin.rb")
  }
)
