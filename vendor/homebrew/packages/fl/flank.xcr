formula = r"""
class Flank < Formula
  desc "Massively parallel Android and iOS test runner for Firebase Test Lab"
  homepage "https://github.com/Flank/flank"
  url "https://github.com/Flank/flank/releases/download/v21.06.0/flank.jar"
  sha256 "a0cca02a18378c4745e8013de7312ae6adf1152dffb82877f35d01117c02629c"
  license "Apache-2.0"

  livecheck do
    url :stable
    strategy :github_latest
  end

  bottle do
    sha256 cellar: :any_skip_relocation, x86_64_linux: "7dd199fc3964d30d1311fe47b46dd62cc98e07da892f2bf6493b19c6815d1c4d"
  end

  depends_on "openjdk"

  def install
    libexec.install "flank.jar"
    bin.write_jar_script libexec/"flank.jar", "flank"
  end

  test do
    (testpath/"flank.yml").write <<~EOS
      gcloud:
        device:
        - model: Pixel2
          version: "29"
          locale: en
          orientation: portrait
    EOS

    output = shell_output("#{bin}/flank android doctor")
    assert_match "Valid yml file", output
  end
end

"""

import "homebrew-install" as hi

import "openjdk" as i0

pkg(
  name: "flank",
  version: "21.06.0",
  dependencies: [hi, i0],

  def install(ctx) {
    ctx.write_file(join(ctx.build, "flank.rb"), formula)
    ctx.system("homebrew-install", ctx.prefix, ctx.state_dir, "./flank.rb")
  }
)
