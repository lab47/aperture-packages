formula = r"""
class Mill < Formula
  desc "Scala build tool"
  homepage "https://com-lihaoyi.github.io/mill/mill/Intro_to_Mill.html"
  url "https://github.com/com-lihaoyi/mill/releases/download/0.9.8/0.9.8-assembly"
  sha256 "0246eba6c743d17003f31916c83d74a7fd95898423c95abcc549dbad3546f7b6"
  license "MIT"

  bottle do
    sha256 cellar: :any_skip_relocation, x86_64_linux: "1e823aa9b5e31f4b17b381933f2293c430c476783a25562cf350eec055157a07"
  end

  depends_on "openjdk"

  def install
    libexec.install Dir["*"].shift => "mill"
    chmod 0555, libexec/"mill"
    (bin/"mill").write_env_script libexec/"mill", Language::Java.overridable_java_home_env
  end

  test do
    (testpath/"build.sc").write <<~EOS
      import mill._
      import mill.scalalib._
      object foo extends ScalaModule {
        def scalaVersion = "2.12.8"
      }
    EOS
    output = shell_output("#{bin}/mill resolve __.compile")
    assert_equal "foo.compile", output.lines.last.chomp
  end
end

"""

import "homebrew-install" as hi

import "openjdk" as i0

pkg(
  name: "mill",
  version: "0.9.8",
  description: "Scala build tool",
  url: "https://com-lihaoyi.github.io/mill/mill/Intro_to_Mill.html",
  metadata: %{
    "license": "MIT",
    "source": "homebrew",
  },
  dependencies: [hi, i0],

  def install(ctx) {
    ctx.write_file(join(ctx.build, "mill.rb"), formula)
    ctx.system("homebrew-install", ctx.prefix, ctx.state_dir, "./mill.rb")
  }
)
