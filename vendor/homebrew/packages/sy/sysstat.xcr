formula = r"""
class Sysstat < Formula
  desc "Performance monitoring tools for Linux"
  homepage "https://github.com/sysstat/sysstat"
  url "https://github.com/sysstat/sysstat/archive/v12.5.4.tar.gz"
  sha256 "8f6dcb186a0b75e0c6c59f134fdb56dd814d6ee676ccde9bd04640c3099c9746"
  license "GPL-2.0-or-later"
  head "https://github.com/sysstat/sysstat.git"

  bottle do
    sha256 x86_64_linux: "fe5d410938c3db2a269966073a71bdafd599afd15ccc2a53f9c3cb88a41b3f06"
  end

  depends_on :linux

  def install
    system "./configure",
           "--disable-file-attr", # Fix install: cannot change ownership
           "--prefix=#{prefix}",
           "conf_dir=#{etc}/sysconfig",
           "sa_dir=#{var}/log/sa"
    system "make", "install"
  end

  test do
    assert_match("PID", shell_output("#{bin}/pidstat"))
    assert_match("avg-cpu", shell_output("#{bin}/iostat"))
  end
end

"""

import "homebrew-install" as hi

pkg(
  name: "sysstat",
  version: "12.5.4",
  description: "Performance monitoring tools for Linux",
  url: "https://github.com/sysstat/sysstat",
  metadata: %{
    "license": "GPL-2.0-or-later",
    "source": "homebrew",
  },
  dependencies: [hi],

  def install(ctx) {
    ctx.write_file(join(ctx.build, "sysstat.rb"), formula)
    ctx.system("homebrew-install", ctx.prefix, ctx.state_dir, "./sysstat.rb")
  }
)
