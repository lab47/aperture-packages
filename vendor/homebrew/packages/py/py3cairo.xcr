"""

import "homebrew-install" as hi

import "cairo" as i0, "fontconfig" as i1, "freetype" as i2, "gdbm" as i3, "gettext" as i4, "glib" as i5, "libffi" as i6, "libpng" as i7, "libpthread-stubs" as i8, "libx11" as i9, "libxau" as i10, "libxcb" as i11, "libxdmcp" as i12, "libxext" as i13, "libxrender" as i14, "lzo" as i15, "meson" as i16, "mpdecimal" as i17, "ninja" as i18, "openssl@1.1" as i19, "pcre" as i20, "pixman" as i21, "pkg-config" as i22, "python@3.9" as i23, "readline" as i24, "sqlite" as i25, "util-macros" as i26, "xcb-proto" as i27, "xorgproto" as i28, "xtrans" as i29, "xz" as i30

pkg(
