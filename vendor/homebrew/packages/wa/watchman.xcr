formula = r"""
class Watchman < Formula
  desc "Watch files and take action when they change"
  homepage "https://github.com/facebook/watchman"
  url "https://github.com/facebook/watchman/archive/v2021.06.07.00.tar.gz"
  sha256 "d5e1e8f4812f0ecd58c108f5844de726a0701bd5dfebe04c4f2a6c61dda0b256"
  license "Apache-2.0"
  head "https://github.com/facebook/watchman.git"

  bottle do
    sha256 cellar: :any, arm64_big_sur: "5ccd1074a8582a6e171bcb76a4588d16d3c0a6ede015b2f7a33d214393708800"
    sha256 cellar: :any, big_sur:       "22fb0d7442a9b36f66861a04b9401c40b9e106401914cbff3e164c988e52595d"
    sha256 cellar: :any, catalina:      "b7702260bbebfe18540d3f860069a043b94cea5b7743b743a2a8dc8a8d36bdc3"
    sha256 cellar: :any, mojave:        "2ccbd0df37dd9c81283a137259cfed579b5c8c6596914849f4feabd2adadd0f5"
    sha256               x86_64_linux:  "b6d1bf0fd3e9a66b564c8f7fc946cd3a021bc1325111d66807ebb4aebf561664"
  end

  depends_on "cmake" => :build
  depends_on "googletest" => :build
  depends_on "pkg-config" => :build
  depends_on "rust" => :build
  depends_on "boost"
  depends_on "fmt"
  depends_on "folly"
  depends_on "gflags"
  depends_on "glog"
  depends_on "libevent"
  depends_on "openssl@1.1"
  depends_on "pcre"
  depends_on "python@3.9"

  on_linux do
    depends_on "gcc" => :build
  end

  fails_with gcc: "5"

  def install
    system "cmake", "-S", ".", "-B", "build",
                    "-DBUILD_SHARED_LIBS=ON",
                    "-DWATCHMAN_VERSION_OVERRIDE=#{version}",
                    "-DWATCHMAN_BUILDINFO_OVERRIDE=#{tap.user}",
                    "-DWATCHMAN_STATE_DIR=#{var}/run/watchman",
                    *std_cmake_args

    # Workaround for `Process terminated due to timeout`
    ENV.deparallelize { system "cmake", "--build", "build" }
    system "cmake", "--install", "build"

    path = Pathname.new(File.join(prefix, HOMEBREW_PREFIX))
    bin.install Dir[path/"bin/*"]
    lib.install Dir[path/"lib/*"]
    path.rmtree
  end

  def post_install
    (var/"run/watchman").mkpath
    chmod 042777, var/"run/watchman"
  end

  test do
    assert_equal(version.to_s, shell_output("#{bin}/watchman -v").chomp)
  end
end

"""

import "homebrew-install" as hi

import "autoconf" as i0, "automake" as i1, "berkeley-db" as i2, "bison" as i3, "boost" as i4, "brotli" as i5, "bzip2" as i6, "c-ares" as i7, "cmake" as i8, "curl" as i9, "double-conversion" as i10, "expat" as i11, "fmt" as i12, "folly" as i13, "gdbm" as i14, "gettext" as i15, "gflags" as i16, "glog" as i17, "googletest" as i18, "icu4c" as i19, "jemalloc" as i20, "krb5" as i21, "libev" as i22, "libevent" as i23, "libffi" as i24, "libidn2" as i25, "libssh2" as i26, "libtool" as i27, "libunistring" as i28, "libxml2" as i29, "lz4" as i30, "m4" as i31, "mpdecimal" as i32, "ncurses" as i33, "nghttp2" as i34, "ninja" as i35, "openldap" as i36, "openssl@1.1" as i37, "pcre" as i38, "perl" as i39, "pkg-config" as i40, "python@3.9" as i41, "readline" as i42, "rtmpdump" as i43, "rust" as i44, "snappy" as i45, "sphinx-doc" as i46, "sqlite" as i47, "unzip" as i48, "xz" as i49, "zip" as i50, "zlib" as i51, "zstd" as i52

pkg(
  name: "watchman",
  version: "2021.06.07.00",
  dependencies: [hi, i0, i1, i2, i3, i4, i5, i6, i7, i8, i9, i10, i11, i12, i13, i14, i15, i16, i17, i18, i19, i20, i21, i22, i23, i24, i25, i26, i27, i28, i29, i30, i31, i32, i33, i34, i35, i36, i37, i38, i39, i40, i41, i42, i43, i44, i45, i46, i47, i48, i49, i50, i51, i52],

  def install(ctx) {
    ctx.write_file(join(ctx.build, "watchman.rb"), formula)
    ctx.system("homebrew-install", ctx.prefix, ctx.state_dir, "./watchman.rb")
  }

  def post_install(ctx) {
    ctx.write_file(join(ctx.build, "watchman.rb"), formula)
    ctx.system("homebrew-install", "--post", ctx.prefix, ctx.state_dir, "./watchman.rb")
  }
)
