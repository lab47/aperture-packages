formula = r"""
require "language/node"

class Serverless < Formula
  desc "Build applications with serverless architectures"
  homepage "https://www.serverless.com/"
  url "https://github.com/serverless/serverless/archive/v2.47.0.tar.gz"
  sha256 "9c7be3b04d575ab90d69cdf7296f02bf48a599d17a865cd6c46c3ce17176e509"
  license "MIT"

  bottle do
    sha256 arm64_big_sur: "b8cf770522f93d0e7641ece5e6541e05233a0b819a879a506acf9fe2eabf2667"
    sha256 big_sur:       "dc451b6562e43d4d3fa1b139933028bd4a44dbea1950416f3eab5f08bc3f57c0"
    sha256 catalina:      "6e1bb594023b9d1afcd2f3e777dd6860fed6d856bb3a9b486a7d7b5d064c6ca6"
    sha256 mojave:        "804c3943b36096d8e75259ab460c35b0a0c7ce5fdea344acb434ab3d341d4f5c"
  end

  depends_on "node"

  on_linux do
    depends_on "python@3.9"
  end

  def install
    system "npm", "install", *Language::Node.std_npm_install_args(libexec)
    bin.install_symlink Dir["#{libexec}/bin/*"]
  end

  test do
    (testpath/"serverless.yml").write <<~EOS
      service: homebrew-test
      provider:
        name: aws
        runtime: python3.6
        stage: dev
        region: eu-west-1
    EOS

    system("#{bin}/serverless", "config", "credentials", "--provider", "aws", "--key", "aa", "--secret", "xx")
    output = shell_output("#{bin}/serverless package")
    assert_match "Serverless: Packaging service...", output
  end
end

"""

import "homebrew-install" as hi

import "node" as i0, "python@3.9" as i1

pkg(
  name: "serverless",
  version: "2.47.0",
  description: "Build applications with serverless architectures",
  url: "https://www.serverless.com/",
  metadata: %{
    "license": "MIT",
    "source": "homebrew",
  },
  dependencies: [hi, i0, i1],

  def install(ctx) {
    ctx.write_file(join(ctx.build, "serverless.rb"), formula)
    ctx.system("homebrew-install", ctx.prefix, ctx.state_dir, "./serverless.rb")
  }
)
