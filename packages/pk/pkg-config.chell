pkg(
  name: "pkg-config",
  version: "0.29.2",
  input: file("https://pkgconfig.freedesktop.org/releases/pkg-config-0.29.2.tar.gz"),

  def install(ctx) {
    ctx.system("./configure", "--disable-debug",
                          "--prefix="+ctx.prefix,
                          "--disable-host-tool",
                          "--with-internal-glib")
    ctx.system("make")
    ctx.system("make", "install")
  }
)
