pkg(
  name: "python-build",
  version: "1.2.22",
  input: file(
    path: "https://github.com/pyenv/pyenv/archive/v1.2.22.tar.gz",
    sum: ("etag", "3f75225a26dfb8af8916488840d86aa53d092e764e691679494656deb29b656c"),
  )

  def install(ctx) {
    ctx.set_env("PREFIX", ctx.prefix)
    ctx.system("./install.sh", dir: "plugins/python-build")
    ctx.system(ctx.prefix + "/bin/python-build", "--definitions")
  }
)
